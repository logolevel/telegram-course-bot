        .fb-easier { background-color: #d4edda; color: #155724; }
        .fb-no-change { background-color: #e2e3e5; color: #383d41; }
        .fb-harder { background-color: #f8d7da; color: #721c24; }

        @media screen and (max-width: 768px) {
            .container { padding: 0.5em; box-shadow: none; }
            table, thead, tbody, th, td, tr { display: block; }
            thead tr { position: absolute; top: -9999px; left: -9999px; }
            tr { border: 1px solid #ccc; margin-bottom: 1em; border-radius: 8px; background: #fff; padding: 0.5em;}
            td { border: none; border-bottom: 1px solid #eee; position: relative; padding-left: 50%; text-align: right; }
            td:before { position: absolute; top: 12px; left: 6px; width: 45%; padding-right: 10px; white-space: nowrap; text-align: left; font-weight: bold; content: attr(data-label); }
        }
    </style>
</head>
<body>
